@model DesafioFull.Web.Models.Titulos.TituloDetailsViewModel
@using DesafioFull.Web.Models.Parcelas
@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Títuo</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Id)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Id)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.NumeroTitulo)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.NumeroTitulo)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.NomeDevedor)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.NomeDevedor)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.QuantidadeParcelas)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.QuantidadeParcelas)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ValorTitulo)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ValorTitulo)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.DiasAtraso)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.DiasAtraso)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ValorTituloAtualizado)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ValorTituloAtualizado)
        </dd>
    </dl>

    <div class="row">
        <h4 class="control-label col-6">Serviços</h4>
    </div>
    <div class="row">
        <table class="table border" id="tabelaParcela">
            <thead class="thead-light">
                <tr>
                    <th></th>
                    <th>Número da parcela</th>
                    <th>Data de vencimento</th>
                    <th>Valor da parcela</th>
                    <th></th>
                </tr>
            </thead>
            <tbody id="tBodyParcelas">
                @foreach (var parcela in Model.Parcelas ?? Enumerable.Empty<ParcelaDetailsViewModel>())
                {
                    <text>
                        <tr>
                            <th></th>
                            <th>@parcela.numeroTitulo</th>
                            <th>@parcela.DataVencimento</th>
                            <th>@parcela.ValorParcela</th>
                            <th></th>
                        </tr>
                    </text>
                }
            </tbody>
        </table>
    </div>
</div>

<div class="modal fade" id="deleteModal" tabindex="-1" aria-labelledby="delete" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title text-danger" id="exampleModalLabel">
                    Excluir bairro
                </h4>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <h3>Tem certeza que deseja excluir este título?</h3>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancelar</button>
                <form method="post" asp-action="Delete">
                    <input type="hidden" asp-for="@Model.Id" />
                    <button type="submit" class="btn btn-danger">
                        <i class="far fa-trash-alt"></i>
                        Excluir
                    </button>
                </form>
            </div>
        </div>
    </div>
</div>

<div>
    <div class="text-left">
        <a class="btn btn-secondary" asp-action="Index">
            <i class="fa fa-arrow-left"></i>
            Voltar
        </a>
        <a asp-action="Edit" asp-controller="TituloController" asp-route-id="@Model.Id" type="button" class="btn btn-success">
            <i class="fa fa-pencil-alt"></i>
            Editar
        </a>
        <button type="button" class="btn btn-danger" data-toggle="modal" data-target="#deleteModal">
            <i class="far fa-trash-alt"></i>
            Excluir
        </button>
    </div>
</div>
